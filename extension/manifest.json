{
  "manifest_version": 3,
  "name": "ClipMaster AI Extension",
  "version": "1.0.0",
  "description": "Automatically capture and organize your copied content with AI-powered categorization",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "clipboardRead",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://dpjzrtwahmbnlxmwnuvc.supabase.co/*",
    "http://localhost:*/*",
    "https://*.lovable.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ClipMaster AI"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}